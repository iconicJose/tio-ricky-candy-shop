# ===========================================
# Pik-A-Mela Candy Shop - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control

# ===========================================
# REQUIRED - App will not start without these
# ===========================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/tio_ricky_candy_shop"

# Session secret for signing cookies (minimum 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret-minimum-32-characters-long"

# Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Stripe webhook secret (starts with whsec_)
# Get this from Stripe Dashboard > Webhooks > Signing secret
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_signing_secret"

# ===========================================
# REQUIRED IN PRODUCTION
# ===========================================

# Stripe publishable key (safe for client-side, starts with pk_test_ or pk_live_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Canonical base URL for the application (no trailing slash)
# Used for webhooks, redirects, and absolute URLs
BASE_URL="http://localhost:3000"

# ===========================================
# OPTIONAL
# ===========================================

# Node environment (development | production | test)
# NODE_ENV="development"

# Port for the application (default: 3000)
# PORT=3000
